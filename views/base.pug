            nav.nav.nav--user
                //- a.nav__el(href='#') All tours
                //- a.nav__el(href='#')
                //-     img(src='img/user.jpg' alt='User photo')
                //-     span Jonas
                button.nav__el Log in
                button.nav__el.nav__el--cta Sign up

        // CONTENT
        block content
            h1 This is a placeholder heading 

        // FOOTER
        footer.footer
            .footer__logo
                img(src='/img/logo-green.png' alt='Natour logo')
            ul.footer__nav
                li: a(href='#') About us
                li: a(href='#') Downlaod apps
                li: a(href='#') Become a guide
